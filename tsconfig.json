{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "moduleResolution": "node"
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", ".eslintrc.js"],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ],
  "files": [
    "src/index.tsx"
  ],
}